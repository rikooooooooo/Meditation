<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".learn">

    <Button
        android:id="@+id/button_article"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/learn_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserratbold"
        android:text="Let's Learn"
        android:textColor="@color/dark_grey"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/artikel_img"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        android:background="@drawable/box_shape4"
        android:src="@drawable/doodle1"
        app:layout_constraintStart_toStartOf="@+id/learn_text1"
        app:layout_constraintTop_toBottomOf="@+id/learn_text1" />

    <TextView
        android:id="@+id/learn_text2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/montserratbold"
        android:text="@string/title_text"
        android:textColor="@color/dark_grey"
        android:textSize="24dp"
        android:elevation="2dp"
        app:layout_constraintStart_toEndOf="@+id/artikel_img"
        app:layout_constraintTop_toTopOf="@+id/artikel_img" />

    <TextView
        android:id="@+id/learn_text3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserratmedium"
        android:text="@string/author_text"
        android:textColor="@color/dark_grey"
        android:textSize="16dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/artikel_img"
        app:layout_constraintTop_toBottomOf="@+id/learn_text2" />

</androidx.constraintlayout.widget.ConstraintLayout>
