<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/registertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/montserratbold"
        android:text="Create your Account"
        android:textSize="24dp"
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <EditText
        android:id="@+id/rg_password_insert"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/box_shape2"
        android:hint="@string/password_text"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/rg_password"
        app:layout_constraintTop_toBottomOf="@+id/rg_password" />

    <TextView
        android:id="@+id/rg_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="256dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Password"
        android:textSize="20dp"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_email" />

    <EditText
        android:id="@+id/rg_email_insert"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/box_shape2"
        android:hint="  Email..."
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/rg_email"
        app:layout_constraintTop_toBottomOf="@+id/rg_email" />

    <TextView
        android:id="@+id/rg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="296dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Email"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_username" />

    <EditText
        android:id="@+id/rg_username_insert"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_shape2"
        android:hint="@string/username_text"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/rg_username"
        app:layout_constraintTop_toBottomOf="@+id/rg_username" />

    <TextView
        android:id="@+id/rg_username"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="252dp"
        android:layout_marginBottom="528dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Username"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/registertext" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/box_shape"
        android:fontFamily="@font/montserratmedium"
        android:text="Register"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/rg_password_insert"
        app:layout_constraintTop_toBottomOf="@+id/rg_password_insert" />

    <TextView
        android:id="@+id/welcome_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"

        android:layout_marginTop="32dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Have an Account ?"
        android:textColor="@color/dark_grey"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_button" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:fontFamily="@font/montserratmedium"
        android:text="Login"
        android:textColor="@color/orange"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toEndOf="@+id/welcome_extra"
        app:layout_constraintTop_toBottomOf="@+id/register_button" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/oval_shape2"
        android:src="@drawable/baseline_arrow_back_24"
        android:fontFamily="@font/montserratmedium"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>