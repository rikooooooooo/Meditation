<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/welcome_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="52dp"

        android:layout_marginTop="76dp"
        android:src="@drawable/welcome_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratbold"
        android:text="Log In"
        android:textSize="24dp"
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_img"
        app:layout_constraintVertical_bias="0.114" />


    <TextView
        android:id="@+id/tx_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="264dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Username"
        android:textSize="20dp"
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/welcome_img"
        app:layout_constraintTop_toBottomOf="@+id/logintext"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:hint="@string/username_text"
        android:inputType="text"
        android:background="@drawable/box_shape2"
        app:layout_constraintStart_toStartOf="@+id/tx_username"
        app:layout_constraintTop_toBottomOf="@+id/tx_username" />

    <TextView
        android:id="@+id/tx_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Password"
        android:textSize="20dp"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/welcome_img"
        app:layout_constraintTop_toBottomOf="@+id/tx_username" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/box_shape2"
        android:hint="@string/password_text"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/tx_password"
        app:layout_constraintTop_toBottomOf="@+id/tx_password" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        android:background="@drawable/box_shape"
        android:fontFamily="@font/montserratmedium"
        android:text="Log In"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />


    <TextView
        android:id="@+id/welcome_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserratmedium"
        android:text="No Account?"
        android:textColor="@color/dark_grey"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="71dp"
        android:layout_height="37dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:fontFamily="@font/montserratmedium"
        android:text="Sign UP"

        android:textColor="@color/orange"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/welcome_extra"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />


</androidx.constraintlayout.widget.ConstraintLayout>