<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <TextView
        android:id="@+id/home_text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/bugatine"
        android:text="@string/app_name"
        android:textColor="@color/dark_grey"
        android:textSize="80dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintWidth_min="180dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="393dp" />


    <TextView
        android:id="@+id/home_text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserratbold"
        android:text="@string/welcome_text"
        android:textColor="@color/dark_grey"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_text1"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintWidth_min="180dp" />

    <TextView
        android:id="@+id/home_text3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserratsemibold"
        android:text="We wish you have a good day"
        android:textColor="@color/grey"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/home_text2"
        app:layout_constraintTop_toBottomOf="@+id/home_text2"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintWidth_min="180dp" />


    <Button
        android:id="@+id/learn_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/box_shape4"
        android:drawableEnd="@drawable/doodle1_shape"
        android:drawablePadding="8dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Basics \nCOURSE"
        android:textColor="@color/dark_grey"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/meditation_button"
        app:layout_constraintEnd_toStartOf="@+id/music_button"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_text3"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintWidth_min="180dp" />

    <Button
        android:id="@+id/music_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/box_shape3"
        android:drawableEnd="@drawable/doodle2_shape"
        android:drawablePadding="8dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Relax \nMusic"
        android:textColor="@color/dark_grey"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/meditation_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toEndOf="@+id/learn_button"
        app:layout_constraintTop_toBottomOf="@+id/home_text3"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintWidth_min="180dp" />

    <TextView
        android:id="@+id/home_text4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/box_shape3"
        android:drawablePadding="8dp"
        android:fontFamily="@font/montserratmedium"
        android:text="\nTimes \nMeditates \n \nMinutes \nMeditate"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/home_text5"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/learn_button"
        app:layout_constraintTop_toBottomOf="@+id/meditation_button"
        app:layout_constraintVertical_bias="0.323"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintWidth_min="180dp" />

    <TextView
        android:id="@+id/home_text5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/box_shape4"
        android:drawablePadding="8dp"
        android:fontFamily="@font/montserratmedium"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/music_button"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toEndOf="@+id/learn_button"
        app:layout_constraintTop_toBottomOf="@+id/meditation_button"
        app:layout_constraintVertical_bias="0.318"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintWidth_min="180dp" />

    <Button
        android:id="@+id/meditation_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="208dp"
        android:background="@drawable/box_shape5"
        android:drawableRight="@drawable/baseline_play_circle_filled_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/montserratmedium"
        android:text="    Daily Thought\n    MEDITATION"
        android:textAlignment="textStart"
        android:textColor="@color/yellow"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/music_button"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/learn_button"
        app:layout_constraintTop_toBottomOf="@+id/home_text3"
        app:layout_constraintVertical_bias="0.794"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintWidth_min="180dp" />


</androidx.constraintlayout.widget.ConstraintLayout>