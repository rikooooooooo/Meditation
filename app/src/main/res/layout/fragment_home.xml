<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <TextView
        android:id="@+id/home_text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/bugatine"
        android:text="@string/app_name"
        android:textColor="@color/dark_grey"
        android:textSize="80dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintWidth_min="180dp" />

    <TextView
        android:id="@+id/home_text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserratbold"
        android:text="@string/welcome_text"
        android:textColor="@color/dark_grey"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_text1"
        app:layout_constraintWidth_min="180dp"
        app:layout_constraintWidth_max="380dp" />


    <TextView
        android:id="@+id/home_text3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserratsemibold"
        android:text="We wish you have a good day"
        android:textColor="@color/grey"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/home_text2"
        app:layout_constraintTop_toBottomOf="@+id/home_text2"
        app:layout_constraintWidth_min="180dp"
        app:layout_constraintWidth_max="380dp" />


    <Button
        android:id="@+id/learn_button"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/box_shape4"
        android:drawableEnd="@drawable/doodle1_shape"
        android:drawablePadding="8dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Basics \nCOURSE"
        android:textColor="@color/dark_grey"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_text3"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintWidth_min="80dp"
       />


    <Button
        android:id="@+id/music_button"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/box_shape3"
        android:drawableEnd="@drawable/doodle2_shape"
        android:drawablePadding="8dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Relax \nMusic"
        android:textSize="16dp"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_text3"
        app:layout_constraintWidth_min="180dp"
        app:layout_constraintWidth_max="380dp" />

    <TextView
        android:id="@+id/home_text4"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/box_shape3"
        android:drawablePadding="8dp"
        android:fontFamily="@font/montserratmedium"
        android:text="\nTimes \nMeditates \n \nMinutes Meditate"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/learn_button"
        app:layout_constraintTop_toBottomOf="@+id/learn_button"
        app:layout_constraintWidth_min="180dp"
        app:layout_constraintWidth_max="380dp" />

    <TextView
        android:id="@+id/home_text5"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/box_shape4"
        android:drawablePadding="8dp"
        android:fontFamily="@font/montserratmedium"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/music_button"
        app:layout_constraintTop_toBottomOf="@+id/music_button"
        app:layout_constraintWidth_min="180dp"
        app:layout_constraintWidth_max="380dp" />


    <Button
        android:id="@+id/meditation_button"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/box_shape5"
        android:drawableRight="@drawable/baseline_play_circle_filled_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/montserratmedium"
        android:text="    Daily Thought\n    MEDITATION"
        android:textAlignment="textStart"
        android:textColor="@color/yellow"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/music_button"
        app:layout_constraintStart_toStartOf="@+id/learn_button"
        app:layout_constraintTop_toBottomOf="@+id/home_text3"
        app:layout_constraintWidth_min="180dp"
        app:layout_constraintWidth_max="380dp" />
</androidx.constraintlayout.widget.ConstraintLayout>