<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/user_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/oval_shape2"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/rg_password_insert"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/box_shape2"
        android:hint="@string/password_text"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/rg_password"
        app:layout_constraintTop_toBottomOf="@+id/rg_password" />

    <TextView
        android:id="@+id/rg_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="256dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Password"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rg_email"
        app:layout_constraintTop_toBottomOf="@+id/rg_email" />

    <EditText
        android:id="@+id/rg_email_insert"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/box_shape2"
        android:hint="  Email..."
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/rg_email"
        app:layout_constraintTop_toBottomOf="@+id/rg_email" />

    <TextView
        android:id="@+id/rg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="296dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Email"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rg_username"
        app:layout_constraintTop_toBottomOf="@+id/rg_username" />

    <EditText
        android:id="@+id/rg_username_insert"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_shape2"
        android:hint="@string/username_text"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/rg_username"
        app:layout_constraintTop_toBottomOf="@+id/rg_username" />

    <TextView
        android:id="@+id/rg_username"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="260dp"
        android:layout_marginBottom="432dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Username"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/box_shape"
        android:fontFamily="@font/montserratmedium"
        android:text="Update"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/rg_password_insert"
        app:layout_constraintTop_toBottomOf="@+id/rg_password_insert" />


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/oval_shape2"
        android:src="@drawable/baseline_arrow_back_24"
        android:fontFamily="@font/montserratmedium"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>